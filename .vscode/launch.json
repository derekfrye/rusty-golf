{
    // Can use http://localhost:8081/?event=401580351&yr=2024&expanded=1 if localhost is fwd'd to open port on dev container (likely 5201)
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rusty-golf'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rusty-golf",
                    "--package=rusty-golf",
                ],
                "filter": {
                    "name": "rusty-golf",
                    "kind": "bin"
                }
            },
            "args": [
                "--db-type=sqlite",
                // "--db-name=file::memory:?cache=shared",
                "--db-name=xxx",
                "--db-startup-script=rusty-golf-actix/src/sql/schema/sqlite/00_event.sql;rusty-golf-actix/src/sql/schema/sqlite/02_golfer.sql;rusty-golf-actix/src/sql/schema/sqlite/03_bettor.sql;rusty-golf-actix/src/sql/schema/sqlite/04_event_user_player.sql;rusty-golf-actix/src/sql/schema/sqlite/05_eup_statistic.sql",
                "--db-populate-json=rusty-golf-tests/tests/test5_dbprefill.json",
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rusty-golf'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rusty-golf",
                    "--package=rusty-golf"
                ],
                "filter": {
                    "name": "rusty-golf",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}